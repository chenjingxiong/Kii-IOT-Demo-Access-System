<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.kii.kiigatekeeper.GroupChoiceActivity">

    <Button
        android:id="@+id/btn_manage_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onManageSecurityClicked"
        android:text="Manage security"/>

    <Button
        android:id="@+id/btn_manage_employee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onManageEmployeeClicked"
        android:text="Manage employee" />

    <Button
        android:id="@+id/btn_anonymous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onManageAnonymousClicked"
        android:text="Manage anonymous"/>

</LinearLayout>
