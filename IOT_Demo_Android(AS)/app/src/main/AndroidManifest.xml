<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kii.kiigatekeeper" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />

    <application
        android:name=".GlobalVariable"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FirstActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LogInActivity"
            android:label="@string/title_activity_signin"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".UserActivity"
            android:label="@string/title_activity_manage"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".AccessLogActivity"
            android:label="@string/title_activity_access_log"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ManageActivity"
            android:label="@string/title_activity_manage"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".DoorControlActivity"
            android:label="@string/title_activity_scan" >
        </activity>
        <activity
            android:name=".GroupChoiceActivity"
            android:label="@string/title_activity_group_choice" >
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
    </application>

</manifest>
